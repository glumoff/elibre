{% extends 'BigElibreBundle:Default:index.html.twig' %}

{% block content %}

  
  
  &nbsp;

  {% block search_results %}
    {% if results %}
      <ul class="searchResults docList">
        {% for hdoc in results %}
          <li>
            {% if hdoc.dt is defined %}
              <div class="docDate">
                  {{ hdoc.dt|date('H:i, d.m.Y') }}
              </div>
            {% endif %}
            <a href="{{ path('big_elibre_doc', {'doc_id': hdoc.document.id,  'action' : 'view' }) }}" title="{{ attribute(hdoc.document, 'title') }}{% if hdoc.document.annotation %}<p>Аннотация: {{ attribute(hdoc.doc, 'annotation') }}</p>{% endif %}">
              {{ attribute(hdoc.document, 'title') }}
            </a>
            <span class="nowrap">
              (<a href="{{ path('big_elibre_theme', {'theme_code': hdoc.document.theme.code,  'action' : 'view' }) }}" title="{% trans %}theme.goto{% endtrans %}">{{ hdoc.document.getTheme().getTitle() }}</a>)
            </span>
            <a class="download" href="{{ path('big_elibre_doc', {'doc_id': hdoc.document.id,  'action' : 'download' }) }}" title="Скачать документ"><img src="{{ asset('bundles/bigelibre/images/icons/') }}{{ hdoc.document.icon }}"></a>
          </li>        
        {%endfor%}
      </ul>
    {%endif%}
  {% endblock %}  

{% endblock %}
